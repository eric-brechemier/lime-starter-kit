<?xml version="1.0" encoding="UTF-8" ?>
<?bml bml-version="100.0" ?>
<bml>
  <head>
    <title>CSS Styles for borders</title>
    <meta name="DC.creator" content="Eric BrÃ©chemier" />
    <meta name="DC.rights" content="http://creativecommons.org/licenses/BSD/"/>
    <meta name="DC.date" content="2011-07-30" />
    <link rel="stylesheet" href="css/base.css" />
    <link rel="stylesheet" href="css/layout.css" />
    <link rel="stylesheet" href="css/colors.css" />
    <style>
    .border, .border1, .border2, .border3, .border4 {
      border-style: solid;
    }

    .border, .border1 {
      border-width: 1px;
    }
    .border2 {
      border-width: 2px;
    }
    .border3 {
      border-width: 3px;
    }
    .border4 {
      border-width: 4px;
    }

    .dashed {
      border-style: dashed;
    }
    .dotted {
      border-style: dotted;
    }
    </style>
  </head>
  <body class="onwhite">
    <p class="black onwhite B2 on3x1">Default</p>
    <p class="black onwhite B3 on3x1 border">Border</p>
    <p class="black onwhite B4 on3x1 border1">Border1</p>
    <p class="black onwhite B5 on3x1 border2">Border2</p>
    <p class="black onwhite B6 on3x1 border3">Border3</p>
    <p class="black onwhite B7 on3x1 border4">Border4</p>

    <p class="black onwhite G3 on6x1 dashed border">Dashed Border</p>
    <p class="black onwhite G4 on6x1 dashed border1">Dashed Border1</p>
    <p class="black onwhite G5 on6x1 dashed border2">Dashed Border2</p>
    <p class="black onwhite G6 on6x1 dashed border3">Dashed Border3</p>
    <p class="black onwhite G7 on6x1 dashed border4">Dashed Border4</p>

    <p class="black onwhite O3 on6x1 dotted border">Dotted Border</p>
    <p class="black onwhite O4 on6x1 dotted border1">Dotted Border1</p>
    <p class="black onwhite O5 on6x1 dotted border2">Dotted Border2</p>
    <p class="black onwhite O6 on6x1 dotted border3">Dotted Border3</p>
    <p class="black onwhite O7 on6x1 dotted border4">Dotted Border4</p>

  </body>
</bml>
